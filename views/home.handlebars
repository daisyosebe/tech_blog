<h1>Homepage</h1>

{{#if logged_in}}
  <a href="/dashboard">Dashboard</a>
  <a href="/api/users/logout">Logout</a>
{{else}}
  <a href="/login">Login</a>
{{/if}}

{{#each posts}}
  <div>
    <h2>{{this.title}}</h2>
    <p>{{this.content}}</p>
    <p>By: {{this.user.username}} on {{this.createdAt}}</p>
  </div>
{{/each}}
