<h1>{{title}}</h1>
<p>{{content}}</p>
<p>By: {{user.username}} on {{createdAt}}</p>

<h2>Comments</h2>

{{#each comments}}
  <div>
    <p>{{this.comment_text}}</p>
    <p>By: {{this.user.username}} on {{this.createdAt}}</p>
  </div>
{{/each}}

{{#if logged_in}}
  <form id="comment-form">
    <label for="comment-text">Add a comment:</label>
    <textarea id="comment-text" name="comment-text"></textarea>
    <button type="submit">Submit</button>
  </form>
{{else}}
  <p>You need to <a href="/login">login</a> to add a comment.</p>
{{/if}}

<script src="/js/comment.js"></script>
<script src="/js/logout.js"></script>
